<Window x:Class="WpfApp1.MainDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfApp1"
        Title="Система управления задачами" 
        Height="800" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F6F6F6"
        WindowStyle="None"
        AllowsTransparency="True"
        BorderThickness="10"
        BorderBrush="#F6F6F6">

    <!-- Скругленные углы окна -->
    <Window.Clip>
        <RectangleGeometry Rect="0,0,1400,800" RadiusX="20" RadiusY="20"/>
    </Window.Clip>

    <!-- Ресурсы окна -->
    <Window.Resources>
        <!-- Стиль кнопки уведомлений -->
        <Style x:Key="NotificationButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#65558F"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#8A6FC5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль кнопки закрытия -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Конвертер видимости -->
        <local:ExecutorActionVisibilityConverter x:Key="ExecutorActionVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <!-- Основной контейнер -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Кнопка закрытия -->
        <Button Style="{StaticResource CloseButtonStyle}"
                Click="CloseAppButton_Click"
                Width="40"
                Height="40"
                Cursor="Hand"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,10,0"
                Grid.ColumnSpan="2">
            <TextBlock Text="✕"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#666666"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="#666666"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Button}}" Value="True">
                                <Setter Property="Foreground" Value="#FF0000"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Button>

        <!-- Левая панель навигации -->
        <Border Grid.Column="0" Background="#EAEAEA" CornerRadius="15,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="20">
                    <TextBlock Text="TaskManager"
                               FontFamily="supporting-text"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#65558F"
                               Margin="0,0,0,30"
                               HorizontalAlignment="Left"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Margin="20,0,20,20">
                    <Button Content="Календарь" Style="{StaticResource MenuButtonStyle}" Click="CalendarButton_Click" Height="49"/>
                    <Button x:Name="EmployeesButton" 
        Content="Сотрудники" 
        Style="{StaticResource MenuButtonStyle}" 
        Click="EmployeesButton_Click" 
        Margin="0,20,0,0" 
        Height="49"/>
                    <Button Content="Задачи" Style="{StaticResource MenuButtonStyle}" Click="MyTasksButton_Click" Margin="0,20,0,0" Height="49"/>
                    <Button x:Name="AddTasksButton"
        Content="Добавить задачу"
        Style="{StaticResource MenuButtonStyle}"
        Click="AddTasksButton_Click"
        Margin="0,20,0,0"
        Height="49"/>

                    <Button Content="Отчеты" Style="{StaticResource MenuButtonStyle}" Click="ReportsButton_Click" Margin="0,20,0,0" Height="49"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Margin="20">
                    <Button Content="Выйти" Click="LogoutButton_Click" Style="{StaticResource MenuButtonStyle}" Height="49"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Правая панель -->
        <Border Grid.Column="1" Background="#FFFFFF" CornerRadius="0,15,15,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Информация о пользователе -->
                <Border Grid.Row="0" Background="#F8F8F8" Padding="20,15" CornerRadius="0,15,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock x:Name="CurrentUserNameText"
                                       FontFamily="supporting-text"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#333333"/>
                            <TextBlock x:Name="CurrentUserRoleText"
                                       FontFamily="supporting-text"
                                       FontSize="12"
                                       Foreground="#65558F"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Область уведомлений -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Уведомления"
                                   FontFamily="supporting-text"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#333333"
                                   Margin="0,0,0,20"/>
                        <ItemsControl x:Name="NotificationsItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" 
                    Padding="10" 
                    Margin="0,0,0,10" 
                    CornerRadius="10" 
                    BorderBrush="#DDD" 
                    BorderThickness="1">
                                        <Border.Effect>
                                            <DropShadowEffect Color="Gray" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                                        </Border.Effect>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Message}" 
                                   VerticalAlignment="Center" 
                                   TextWrapping="Wrap"
                                   FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Deadline, StringFormat='Срок: {0:dd.MM.yyyy}'}" 
                                   VerticalAlignment="Center" 
                                   TextWrapping="Wrap"
                                   FontSize="11"
                                   Foreground="#666"
                                   Margin="0,5,0,0"/>
                                            </StackPanel>

                                            <!-- Кнопка "Принять" ТОЛЬКО для исполнителя и новых задач -->
                                            <Button Grid.Column="1" 
                            Content="Принять" 
                            Click="NotificationActionButton_Click"
                            Visibility="{Binding Status, Converter={StaticResource ExecutorActionVisibilityConverter}}"
                            Style="{StaticResource NotificationButtonStyle}"
                            Margin="0,0,10,0"/>

                                            <!-- Кнопка "Удалить" -->
                                            <Button Grid.Column="2" 
                            Content="Удалить" 
                            Click="DeleteNotificationButton_Click">
                                                <Button.Style>
                                                    <Style TargetType="Button" BasedOn="{StaticResource NotificationButtonStyle}">
                                                        <Setter Property="Background" Value="#FF6B6B"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#FF4C4C"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
