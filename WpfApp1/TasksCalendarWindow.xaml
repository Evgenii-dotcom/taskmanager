<Window x:Class="WpfApp1.TasksCalendarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Календарь задач" 
        Height="800" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F6F6F6"
        WindowStyle="None"
        AllowsTransparency="True"
        BorderThickness="10"
        BorderBrush="#F6F6F6">

    <Window.Clip>
        <RectangleGeometry Rect="0,0,1400,800" RadiusX="20" RadiusY="20"/>
    </Window.Clip>

    <Window.Resources>
        <!-- Базовый стиль текстового поля -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="CaretBrush" Value="#65558F"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"
                                          Background="Transparent"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#65558F"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#65558F"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль только для чтения -->
        <Style x:Key="ReadOnlyTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource ModernTextBoxStyle}">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Верхняя панель -->
        <Grid Margin="30,20,30,0" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Кнопка назад -->
            <Button Grid.Column="0" Click="BackButton_Click" Width="40" Height="40" Cursor="Hand" Margin="0,0,20,0" Background="Transparent" BorderThickness="0">
                <TextBlock Text="←" FontSize="24" FontWeight="Bold" Foreground="#65558F" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <ContentPresenter/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Заголовок окна -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="Календарь задач"
                           FontFamily="Segoe UI"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#333333"/>
            </StackPanel>

            <!-- Пользователь -->
            <Border Grid.Column="2" Background="#FFFFFF" CornerRadius="10" Padding="15,10" BorderThickness="1" BorderBrush="#E0E0E0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="32" Height="32" Background="#65558F" CornerRadius="16" Margin="0,0,10,0">
                        <TextBlock Text="👤" FontSize="14" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel>
                        <TextBlock x:Name="CurrentUserNameText" FontFamily="Segoe UI" FontSize="12" FontWeight="Bold" Foreground="#333333"/>
                        <TextBlock x:Name="CurrentUserRoleText" FontFamily="Segoe UI" FontSize="10" Foreground="#65558F" Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Основное содержимое -->
        <Grid Margin="30,80,30,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- Левая часть - календарь -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                
                    <Canvas x:Name="CalendarCanvas"/>
                
            </ScrollViewer>

            <!-- Правая часть - детали задачи -->
            <Border Grid.Column="1" Background="White" CornerRadius="10" BorderThickness="1" BorderBrush="#E0E0E0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <TextBlock x:Name="SelectedTaskTitle" Text="Выберите задачу" FontFamily="Segoe UI" FontSize="16" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,25"/>
                        <TextBlock Text="Описание задачи:" FontWeight="SemiBold"/>
                        <TextBox x:Name="DescriptionTextBox" Style="{StaticResource ReadOnlyTextBoxStyle}" Height="80" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

                        <TextBlock Text="Исполнитель:" FontWeight="SemiBold" Margin="0,10,0,2"/>
                        <TextBlock x:Name="AssignedEmployeeText" FontSize="12" Foreground="#333333"/>

                        <TextBlock Text="Дата создания:" FontWeight="SemiBold" Margin="0,10,0,2"/>
                        <TextBlock x:Name="CreatedDateText" FontSize="12" Foreground="#333333"/>

                        <TextBlock Text="Срок сдачи:" FontWeight="SemiBold" Margin="0,10,0,2"/>
                        <TextBlock x:Name="DeadlineDateText" FontSize="12" Foreground="#333333"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>
