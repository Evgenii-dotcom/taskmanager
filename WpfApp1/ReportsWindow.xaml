<Window x:Class="WpfApp1.ReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Отчёты"
        Height="800"
        Width="1400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F6F6F6"
        WindowStyle="None"
        AllowsTransparency="True"
        BorderThickness="10"
        BorderBrush="#F6F6F6">

    <Window.Clip>
        <RectangleGeometry Rect="0,0,1400,800" RadiusX="20" RadiusY="20"/>
    </Window.Clip>

    <Window.Resources>
        <!-- Стиль кнопок фильтров и отчётов -->
        <Style x:Key="FilterButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#65558F"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SelectedFilterButtonStyle" TargetType="Button" BasedOn="{StaticResource FilterButtonStyle}">
            <Setter Property="Background" Value="#65558F"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="ReportButtonStyle" TargetType="Button" BasedOn="{StaticResource FilterButtonStyle}"/>
        <Style x:Key="SelectedReportButtonStyle" TargetType="Button" BasedOn="{StaticResource SelectedFilterButtonStyle}"/>
    </Window.Resources>

    <Grid>
        <!-- Верхняя панель -->
        <Grid Margin="30,20,30,0" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Кнопка назад -->
            <Button Grid.Column="0" Click="BackButton_Click"
                    Width="40" Height="40" Cursor="Hand"
                    Margin="0,0,20,0" Background="Transparent" BorderThickness="0">
                <TextBlock Text="←" FontSize="24" FontWeight="Bold" Foreground="#65558F"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <ContentPresenter/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Заголовок -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="Отчёты"
                           FontFamily="Segoe UI"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#333333"/>
            </StackPanel>

            <!-- Пользователь -->
            <Border Grid.Column="2" Background="#FFFFFF" CornerRadius="10"
                    Padding="15,10" BorderThickness="1" BorderBrush="#E0E0E0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="32" Height="32" Background="#65558F"
                            CornerRadius="16" Margin="0,0,10,0">
                        <TextBlock Text="👤" FontSize="14" Foreground="White"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel>
                        <TextBlock x:Name="CurrentUserNameText"
                                   FontFamily="Segoe UI" FontSize="12"
                                   FontWeight="Bold" Foreground="#333333"/>
                        <TextBlock x:Name="CurrentUserRoleText"
                                   FontFamily="Segoe UI" FontSize="10"
                                   Foreground="#65558F" Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Основное содержимое -->
        <Grid Margin="30,80,30,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top" Background="Transparent">
                <Button x:Name="AllTasksReportButton" Content="Все задачи пользователя" Style="{StaticResource ReportButtonStyle}" Click="ReportButton_Click" Margin="0,20,0,0" Height="36"/>
                <Button x:Name="ActiveTasksReportButton" Content="Активные задачи" Style="{StaticResource ReportButtonStyle}" Click="ReportButton_Click" Margin="0,20,0,0" Height="36"/>
                <Button x:Name="CompletedTasksReportButton" Content="Выполненные задачи" Style="{StaticResource ReportButtonStyle}" Click="ReportButton_Click" Margin="0,20,0,0" Height="36"/>
                <Button x:Name="OverdueTasksReportButton" Content="Просроченные задачи" Style="{StaticResource ReportButtonStyle}" Click="ReportButton_Click" Margin="0,20,0,0" Height="36"/>
                <Button x:Name="TasksByEmployeeReportButton" Content="Диаграмма по сотрудникам" Style="{StaticResource ReportButtonStyle}" Click="ReportButton_Click" Margin="0,20,0,0" Height="36"/>
                <Button x:Name="EmployeeStatsReportButton" Content="Статистика сотрудников" Style="{StaticResource ReportButtonStyle}" Click="ReportButton_Click" Margin="0,20,0,0" Height="36"/>
            </StackPanel>

            <!-- Правая часть -->
            <Border Grid.Column="1" Background="White" CornerRadius="10" BorderThickness="1" BorderBrush="#E0E0E0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">

                        <!-- Панель выбора периода -->
                        <Border x:Name="PeriodSelectionPanel"
        Background="#FAFAFA"
        BorderBrush="#E0E0E0"
        BorderThickness="1"
        CornerRadius="12"
        Padding="12"
        Margin="0,0,0,15"
        Visibility="Collapsed">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                                <!-- Заголовок -->
                                <TextBlock Text="Период:"
                   FontFamily="Segoe UI"
                   FontWeight="SemiBold"
                   FontSize="14"
                   VerticalAlignment="Center"
                   Foreground="#333333"
                   Margin="0,0,10,0"/>

                                <!-- С начала -->
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                                    <TextBlock Text="с" VerticalAlignment="Center" Foreground="#555555" Margin="0,0,6,0"/>
                                    <DatePicker x:Name="StartDatePicker"
                        Width="140"
                        SelectedDate="{x:Static sys:DateTime.Now}"
                        BorderBrush="#D0D0D0"
                        BorderThickness="1"
                        Background="White"
                        FontFamily="Segoe UI"
                        FontSize="13"
                        Margin="0,0,0,0"/>
                                </StackPanel>

                                <!-- По -->
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,12,0">
                                    <TextBlock Text="по" VerticalAlignment="Center" Foreground="#555555" Margin="0,0,6,0"/>
                                    <DatePicker x:Name="EndDatePicker"
                        Width="140"
                        SelectedDate="{x:Static sys:DateTime.Now}"
                        BorderBrush="#D0D0D0"
                        BorderThickness="1"
                        Background="White"
                        FontFamily="Segoe UI"
                        FontSize="13"
                        Margin="0,0,0,0"/>
                                </StackPanel>

                                <!-- Кнопка Применить (скругление через Border) -->
                                <Border CornerRadius="8" Background="#65558F" VerticalAlignment="Center">
                                    <Button Content="Применить"
                    Click="ApplyPeriodButton_Click"
                    Height="32"
                    Padding="14,0"
                    Background="Transparent"
                    Foreground="White"
                    FontFamily="Segoe UI"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <!-- делаем кнопку прозрачной, скругление обеспечивает Border-родитель -->
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Панель отчёта -->
                        <StackPanel x:Name="ReportContentPanel">
                            <TextBlock Text="Выберите отчёт слева"
                                       FontFamily="Segoe UI"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#333333"/>
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>
