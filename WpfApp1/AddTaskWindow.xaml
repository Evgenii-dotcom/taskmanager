<Window x:Class="WpfApp1.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить задачу" 
        Height="800" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F6F6F6"
        WindowStyle="None"
        AllowsTransparency="True"
        BorderThickness="10"
        BorderBrush="#F6F6F6">

    <!-- Скругленные углы окна -->
    <Window.Clip>
        <RectangleGeometry Rect="0,0,1400,800" RadiusX="20" RadiusY="20"/>
    </Window.Clip>

    <!-- Стили -->
    <Window.Resources>
        <!-- Стиль для текстовых полей -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="CaretBrush" Value="#65558F"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        Background="Transparent"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#65558F"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#65558F"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для отображения номера задачи -->
        <Style x:Key="TaskNumberStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15,12"/>
        </Style>

        <!-- Стиль для DatePicker -->
        <Style x:Key="ModernDatePickerStyle" TargetType="DatePicker">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="IsTodayHighlighted" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <DatePickerTextBox x:Name="PART_TextBox"
                                                 Grid.Column="0"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 VerticalContentAlignment="Center"/>
                                <Button x:Name="PART_Button"
                                        Grid.Column="1"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Margin="5,0,0,0"
                                        Width="30"
                                        Content="📅"
                                        FontSize="14"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#65558F"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#65558F"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопки назад -->
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Основные кнопки действий -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#65558F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="30,15"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#5A4A7A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4A3C6B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8">
                            <Grid>
                                <ToggleButton Name="ToggleButton"
                                      Grid.Column="2"
                                      Focusable="false"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </ToggleButton>
                                <ContentPresenter Name="ContentSite"
                                          IsHitTestVisible="False"
                                          Content="{TemplateBinding SelectionBoxItem}"
                                          Margin="3"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Left"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#65558F"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#65558F"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#65558F"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#65558F"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F8F6FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопок категорий -->
        <Style x:Key="CategoryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F8F8F8"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#65558F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SelectedCategoryButtonStyle" TargetType="Button" BasedOn="{StaticResource CategoryButtonStyle}">
            <Setter Property="Background" Value="#65558F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#65558F"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <!-- Убран триггер наведения для выбранной кнопки -->
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Верхняя панель с информацией о пользователе и кнопкой закрытия -->
        <Grid Margin="30,50,30,0" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Информация о текущем пользователе справа -->
            <Border Grid.Column="1" 
                    Background="#FFFFFF" 
                    CornerRadius="10" 
                    Padding="15,10"
                    BorderThickness="1"
                    BorderBrush="#E0E0E0"
                    VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Аватар или иконка -->
                    <Border Width="32"
                            Height="32"
                            Background="#65558F"
                            CornerRadius="16"
                            Margin="0,0,10,0">
                        <TextBlock Text="👤"
                                  FontSize="14"
                                  Foreground="White"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Border>

                    <!-- Информация о пользователе -->
                    <StackPanel>
                        <TextBlock x:Name="CurrentUserNameText"
                                  FontFamily="Segoe UI"
                                  FontSize="12"
                                  FontWeight="Bold"
                                  Foreground="#333333"/>
                        <TextBlock x:Name="CurrentUserRoleText"
                                  FontFamily="Segoe UI"
                                  FontSize="10"
                                  Foreground="#65558F"
                                  Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Кнопка закрытия программы -->
        <Button Click="CloseAppButton_Click"
                Width="40"
                Height="40"
                Cursor="Hand"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,20,18,0"
                Background="Transparent"
                BorderThickness="0">
            <TextBlock Text="✕"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#666666"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" Height="50" Width="58" Margin="52,-22,0,0" RenderTransformOrigin="1.1,1.15">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="#666666"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Button}}" Value="True">
                                <Setter Property="Foreground" Value="#FF0000"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>

        <!-- Основное содержимое -->
        <Grid Margin="30,60,30,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Верхняя панель с заголовком и кнопкой назад -->
            <Grid Grid.Row="0" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Кнопка назад -->
                <Button Grid.Column="0"
                        Style="{StaticResource BackButtonStyle}"
                        Click="BackButton_Click"
                        Width="40"
                        Height="40"
                        Cursor="Hand"
                        Margin="0,0,20,0">
                    <TextBlock Text="←"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#65558F"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#65558F"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Button}}" Value="True">
                                        <Setter Property="Foreground" Value="#4A3C6B"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Button>

                <!-- Заголовок -->
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Добавление новой задачи"
                              FontFamily="Segoe UI"
                              FontSize="24"
                              FontWeight="Bold"
                              Foreground="#333333"/>
                    <TextBlock Text="Создание новой задачи для сотрудника"
                              FontFamily="Segoe UI"
                              FontSize="16"
                              Foreground="#666666"
                              Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Основное содержимое -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="400"/>
                </Grid.ColumnDefinitions>

                <!-- Левая часть - форма добавления задачи -->
                <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="0,0,30,-37">
                    <StackPanel>
                        <!-- Номер задачи -->
                        <StackPanel Margin="0,0,0,25">
                            <TextBlock Text="Номер задачи"
                                      FontFamily="Segoe UI"
                                      FontSize="14"
                                      FontWeight="SemiBold"
                                      Foreground="#333333"
                                      Margin="0,0,0,8"/>
                            <Border Style="{StaticResource TaskNumberStyle}">
                                <TextBlock x:Name="TaskNumberText"
                                          FontFamily="Segoe UI"
                                          FontSize="16"
                                          FontWeight="Bold"
                                          Foreground="#65558F"
                                          VerticalAlignment="Center" Height="27"/>
                            </Border>
                        </StackPanel>

                        <!-- Фамилия сотрудника -->
                        <StackPanel Margin="0,0,0,25">
                            <TextBlock Text="Фамилия сотрудника"
               FontFamily="Segoe UI"
               FontSize="14"
               FontWeight="SemiBold"
               Foreground="#333333"
               Margin="0,0,0,8"/>
<ComboBox x:Name="EmployeeComboBox"
          Height="36"
          IsEditable="True"
          Loaded="EmployeeComboBox_Loaded"
          SelectionChanged="EmployeeComboBox_SelectionChanged"
          DisplayMemberPath="FullName"
          SelectedValuePath="Id"
          TextSearch.TextPath="FullName"/>
                        </StackPanel>


                        <!-- Категория задачи -->
                        <StackPanel Margin="0,0,0,25">
                            <TextBlock Text="Категория задачи"
                                      FontFamily="Segoe UI"
                                      FontSize="14"
                                      FontWeight="SemiBold"
                                      Foreground="#333333"
                                      Margin="0,0,0,10"/>

                            <WrapPanel Orientation="Horizontal">
                                <Button x:Name="DevelopmentButton"
                                        Content="Разработка"
                                        Style="{StaticResource CategoryButtonStyle}"
                                        Click="CategoryButton_Click"
                                        Width="120"
                                        Margin="0,0,10,0" Height="35"/>
                                <Button x:Name="DesignButton"
                                        Content="Дизайн"
                                        Style="{StaticResource CategoryButtonStyle}"
                                        Click="CategoryButton_Click"
                                        Width="120"
                                        Margin="0,0,10,0"/>
                                <Button x:Name="TestingButton"
                                        Content="Тестировка"
                                        Style="{StaticResource CategoryButtonStyle}"
                                        Click="CategoryButton_Click"
                                        Width="120"
                                        Margin="0,0,10,0"/>
                                <Button x:Name="MarketingButton"
                                        Content="Маркетинг"
                                        Style="{StaticResource CategoryButtonStyle}"
                                        Click="CategoryButton_Click"
                                        Width="120"/>
                            </WrapPanel>
                        </StackPanel>

                        <!-- Срок сдачи -->
                        <StackPanel Margin="0,0,0,25">
                            <TextBlock Text="Срок сдачи"
                                      FontFamily="Segoe UI"
                                      FontSize="14"
                                      FontWeight="SemiBold"
                                      Foreground="#333333"
                                      Margin="0,0,0,8"/>
                            <DatePicker x:Name="DeadlineDatePicker"
                                        Style="{StaticResource ModernDatePickerStyle}"
                                        SelectedDateFormat="Short"
                                        PreviewTextInput="DatePicker_PreviewTextInput"/>
                        </StackPanel>

                        <!-- Описание задачи -->
                        <StackPanel Margin="0,0,0,30">
                            <TextBlock Text="Описание задачи"
                                      FontFamily="Segoe UI"
                                      FontSize="14"
                                      FontWeight="SemiBold"
                                      Foreground="#333333"
                                      Margin="0,0,0,8"/>
                            <TextBox x:Name="DescriptionTextBox"
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     Height="74"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>

                        <!-- Кнопки действий -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,30">
                            <Button Content="Отменить"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Click="CancelButton_Click"
                                    Width="120"
                                    Height="45"
                                    Margin="0,0,15,0"/>
                            <Button Content="Сохранить"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Click="CreateTaskButton_Click"
                                    Width="140"
                                    Height="45"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>

                <!-- Правая часть - информация -->
                <Border Grid.Column="1" 
                        Background="#FFFFFF" 
                        CornerRadius="10" 
                        BorderThickness="1" 
                        BorderBrush="#E0E0E0"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="Информация"
                                  FontFamily="Segoe UI"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Foreground="#333333"
                                  Margin="0,0,0,20"/>

                        <TextBlock Text="Создание новой задачи"
                                  FontFamily="Segoe UI"
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Foreground="#333333"
                                  Margin="0,0,0,15"/>

                        <StackPanel>
                            <TextBlock Text="• Выберите сотрудника для выполнения задачи"
                                      FontFamily="Segoe UI"
                                      FontSize="12"
                                      Foreground="#666666"
                                      Margin="0,0,0,8"/>
                            <TextBlock Text="• Укажите категорию задачи"
                                      FontFamily="Segoe UI"
                                      FontSize="12"
                                      Foreground="#666666"
                                      Margin="0,0,0,8"/>
                            <TextBlock Text="• Установите реалистичный срок выполнения"
                                      FontFamily="Segoe UI"
                                      FontSize="12"
                                      Foreground="#666666"
                                      Margin="0,0,0,8"/>
                            <TextBlock Text="• Подробно опишите требования к задаче"
                                      FontFamily="Segoe UI"
                                      FontSize="12"
                                      Foreground="#666666"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>