<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Войти в систему" 
        Height="612" 
        Width="999"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F6F6F6"
        WindowStyle="None"
        AllowsTransparency="True"
        BorderThickness="10"
        BorderBrush="#F6F6F6">

    <!-- Скругленные углы окна -->
    <Window.Clip>
        <RectangleGeometry Rect="0,0,999,612" RadiusX="20" RadiusY="20"/>
    </Window.Clip>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Кнопка закрытия в правом верхнем углу -->
        <Button Grid.Row="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Width="30"
                Height="30"
                Click="CloseButton_Click"
                Cursor="Hand"
                Margin="0,-10,-10,0">

            <!-- Стиль для кнопки закрытия -->
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>

            <TextBlock Text="✕"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="#666666"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="#666666"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Button}}" Value="True">
                                <Setter Property="Foreground" Value="#FF0000"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Button>

        <!-- Заголовок "Войти в систему" -->
        <TextBlock Grid.Row="0"
                   Text="Войти в систему" 
                   FontFamily="supporting-text"
                   FontSize="24" 
                   FontWeight="Bold"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,20"/>

        <!-- Описание под заголовком -->
        <TextBlock Grid.Row="1"
                   Text="Для входа в систему используйте пароль выданный администратором"
                   TextWrapping="Wrap"
                   FontFamily="supporting-text"
                   FontSize="14"
                   Foreground="#666666"
                   Margin="0,0,0,30"/>

        <!-- Поле "Логин" -->
        <TextBlock Grid.Row="2"
                   Text="Логин"
                   FontFamily="supporting-text"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,0,0,5"/>

        <TextBox Grid.Row="3"
                 x:Name="LoginTextBox"
                 FontFamily="supporting-text"
                 FontSize="14"
                 Padding="10,8"
                 Margin="0,0,0,5"
                 BorderThickness="1"
                 BorderBrush="#CCCCCC"
                 Background="White">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="BorderBrush" Value="#CCCCCC"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="#999999"/>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="BorderBrush" Value="#65558F"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>

        <TextBlock Grid.Row="4"
                   Text="Используйте логин, выданный администратором"
                   FontFamily="supporting-text"
                   FontSize="12"
                   Foreground="#999999"
                   Margin="0,0,0,20"/>

        <!-- Поле "Пароль" -->
        <TextBlock Grid.Row="5"
                   Text="Пароль"
                   FontFamily="supporting-text"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,0,0,5"/>

        <PasswordBox Grid.Row="6"
                     x:Name="PasswordBox"
                     FontFamily="supporting-text"
                     FontSize="14"
                     Padding="10,8"
                     Margin="0,0,0,5"
                     BorderThickness="1"
                     BorderBrush="#CCCCCC"
                     Background="White">
            <PasswordBox.Style>
                <Style TargetType="PasswordBox">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="BorderBrush" Value="#CCCCCC"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="#999999"/>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="BorderBrush" Value="#65558F"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </PasswordBox.Style>
        </PasswordBox>

        <TextBlock Grid.Row="7"
                   Text="Используйте пароль, выданный администратором"
                   FontFamily="supporting-text"
                   FontSize="12"
                   Foreground="#999999"
                   Margin="0,0,0,30"/>

        <!-- Кнопка "Войти" с исправленным стилем -->
        <Button Grid.Row="7"
                Content="Войти"
                Click="LoginButton_Click"
                FontFamily="supporting-text"
                FontSize="14"
                FontWeight="Bold"
                Padding="20,10"
                Width="69"
                HorizontalAlignment="Left"
                Cursor="Hand"
                Margin="-10,33,0,184" RenderTransformOrigin="0.5,0.612">

            <!-- Простой и работающий стиль для кнопки "Войти" -->
            <Button.Style>
                <Style TargetType="Button">
                    <!-- Базовые свойства -->
                    <Setter Property="Background" Value="#F6F6F6"/>
                    <Setter Property="Foreground" Value="#65558F"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="BorderBrush" Value="#65558F"/>

                    <!-- Кастомный template -->
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter x:Name="contentPresenter"
                                                    HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="Black"/>
                                        <Setter TargetName="border" Property="BorderBrush" Value="#4A3C6B"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>