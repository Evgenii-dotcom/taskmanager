<Window x:Class="WpfApp1.TasksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Задачи" 
        Height="800" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F6F6F6"
        WindowStyle="None"
        AllowsTransparency="True"
        BorderThickness="10"
        BorderBrush="#F6F6F6">

    <Window.Clip>
        <RectangleGeometry Rect="0,0,1400,800" RadiusX="20" RadiusY="20"/>
    </Window.Clip>

    <Window.Resources>
        <!-- Стиль для кнопки назад -->
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопок фильтров -->
        <Style x:Key="FilterButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F8F8F8"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#65558F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SelectedFilterButtonStyle" TargetType="Button" BasedOn="{StaticResource FilterButtonStyle}">
            <Setter Property="Background" Value="#65558F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#65558F"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопки выполнения -->
        <Style x:Key="CompleteButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#28A745"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#218838"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E7E34"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопки загрузки отчета -->
        <Style x:Key="UploadButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#17A2B8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#138496"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#117A8B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопки скачивания отчета -->
        <Style x:Key="DownloadButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#65558F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4A3C6B"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4A3C6B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для ComboBox сотрудников -->
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" Margin="5,2"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#65558F"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#4A3C6B"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для текстовых полей -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="CaretBrush" Value="#65558F"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        Background="Transparent"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#65558F"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#65558F"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для полей только для чтения -->
        <Style x:Key="ReadOnlyTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource ModernTextBoxStyle}">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>
        
        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource CompleteButtonStyle}">
            <Setter Property="Background" Value="#28A745"/>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource CompleteButtonStyle}">
            <Setter Property="Background" Value="#DC3545"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Верхняя панель с информацией о пользователе и кнопкой закрытия -->
        <Grid Margin="-19,0,79,0" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Информация о текущем пользователе справа -->
            <Border Grid.Column="1" 
                    Background="#FFFFFF" 
                    CornerRadius="10" 
                    Padding="15,10"
                    BorderThickness="1"
                    BorderBrush="#E0E0E0"
                    VerticalAlignment="Top" Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="32"
                            Height="32"
                            Background="#65558F"
                            CornerRadius="16"
                            Margin="0,0,10,0">
                        <TextBlock Text="👤"
                                  FontSize="14"
                                  Foreground="White"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel>
                        <TextBlock x:Name="CurrentUserNameText"
                                  FontFamily="Segoe UI"
                                  FontSize="12"
                                  FontWeight="Bold"
                                  Foreground="#333333"/>
                        <TextBlock x:Name="CurrentUserRoleText"
                                  FontFamily="Segoe UI"
                                  FontSize="10"
                                  Foreground="#65558F"
                                  Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Кнопка закрытия программы -->
        <Button Click="CloseAppButton_Click"
                Width="40"
                Height="40"
                Cursor="Hand"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,0,-33,0"
                Background="Transparent"
                BorderThickness="0">
            <TextBlock Text="✕"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#666666"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" Margin="20,-7,0,0">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="#666666"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Button}}" Value="True">
                                <Setter Property="Foreground" Value="#FF0000"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>

        <!-- Основное содержимое -->
        <Grid Margin="30,60,30,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Верхняя панель с заголовком и кнопкой назад -->
            <Grid Grid.Row="0" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Кнопка назад -->
                <Button Grid.Column="0"
                        Style="{StaticResource BackButtonStyle}"
                        Click="BackButton_Click"
                        Width="40"
                        Height="40"
                        Cursor="Hand"
                        Margin="0,0,20,0">
                    <TextBlock Text="←"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#65558F"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#65558F"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Button}}" Value="True">
                                        <Setter Property="Foreground" Value="#4A3C6B"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Button>

                <!-- Заголовок -->
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Мои задачи"
                              FontFamily="Segoe UI"
                              FontSize="24"
                              FontWeight="Bold"
                              Foreground="#333333"/>
                    <TextBlock x:Name="TasksSubtitleText"
                              Text="Просмотр ваших задач"
                              FontFamily="Segoe UI"
                              FontSize="16"
                              Foreground="#666666"
                              Margin="0,10,0,0"/>
                </StackPanel>

                <!-- Фильтр сотрудников (только для администратора) -->
                <ComboBox  x:Name="EmployeeFilterComboBox"
          Grid.Column="2"
          Width="220"
          Style="{StaticResource ModernComboBoxStyle}"
          Visibility="Collapsed"
          SelectionChanged="EmployeeFilterComboBox_SelectionChanged"
          DropDownOpened="EmployeeFilterComboBox_DropDownOpened"
          DisplayMemberPath="FullName">
                </ComboBox>

            </Grid>

            <!-- Основное содержимое -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="400"/>
                </Grid.ColumnDefinitions>

                <!-- Левая часть - список задач -->
                <Grid Grid.Column="0" Margin="0,0,30,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Поиск и фильтры -->
                        <RowDefinition Height="*"/>
                        <!-- Список задач -->
                    </Grid.RowDefinitions>

                    <!-- Поиск и фильтры -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="Поиск по задачам" FontFamily="Segoe UI" FontSize="14" FontWeight="SemiBold" Foreground="#333333" Margin="0,0,0,10"/>
                        <TextBox x:Name="SearchTextBox" Style="{StaticResource ModernTextBoxStyle}" Height="40" TextChanged="SearchTextBox_TextChanged"/>
                        <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                            <Button x:Name="AllTasksButton" Content="Все задачи" Style="{StaticResource SelectedFilterButtonStyle}" Click="FilterButton_Click" Margin="0,0,10,0" Height="29" Width="101"/>
                            <Button x:Name="ActiveTasksButton" Content="Активные" Style="{StaticResource FilterButtonStyle}" Click="FilterButton_Click" Margin="0,0,10,0" Width="100"/>
                            <Button x:Name="CompletedTasksButton" Content="Сданные" Style="{StaticResource FilterButtonStyle}" Click="FilterButton_Click" Margin="0,0,10,0" Width="100"/>
                            <Button x:Name="AcceptedTasksButton" Content="Выполненные" Style="{StaticResource FilterButtonStyle}" Click="FilterButton_Click" Margin="0,0,10,0" Width="100"/>
                            <Button x:Name="OverdueTasksButton" Content="Просроченные" Style="{StaticResource FilterButtonStyle}" Click="FilterButton_Click" Width="100"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Таблица задач -->
                    <!-- Таблица задач -->
                    <Border Grid.Row="1" Background="White" CornerRadius="10" BorderThickness="1" BorderBrush="#E0E0E0" Padding="15">
                        <ListView x:Name="TasksListView"
              BorderThickness="0"
              Background="Transparent"
              ScrollViewer.HorizontalScrollBarVisibility="Auto"
              ScrollViewer.VerticalScrollBarVisibility="Auto"
              SelectionChanged="TasksListView_SelectionChanged">

                            <!-- Стили для ListViewItem -->
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Height" Value="35"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <Border x:Name="border" 
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6"
                                    Margin="0,2">
                                                    <GridViewRowPresenter VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#F8F6FF"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#65558F"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>

                            <!-- ОПРЕДЕЛЕНИЕ КОЛОНОК - ЭТО ОБЯЗАТЕЛЬНО -->
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Width="40" Header="№">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Number}" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center" 
                                       FontSize="12"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Width="150" Header="Номер задачи">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding TaskNumber}" 
                                       VerticalAlignment="Center" 
                                       FontSize="12" 
                                       TextWrapping="NoWrap" 
                                       ToolTip="{Binding TaskNumber}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Width="150" Header="Сфера деятельности">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Category}" 
                                       VerticalAlignment="Center" 
                                       FontSize="12"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Width="150" Header="Крайняя дата сдачи">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding DeadlineDate, StringFormat=dd.MM.yyyy}" 
                                       VerticalAlignment="Center" 
                                       FontSize="12"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Width="120" Header="Статус">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Status}" 
                                       VerticalAlignment="Center" 
                                       FontSize="12"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Border>
                </Grid>


                <!-- Правая часть - детали задачи -->
                <Border Grid.Column="1" 
                        Background="#FFFFFF" 
                        CornerRadius="10" 
                        BorderThickness="1" 
                        BorderBrush="#E0E0E0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <TextBlock x:Name="SelectedTaskTitle"
                                      Text="Выберите задачу для просмотра"
                                      FontFamily="Segoe UI"
                                      FontSize="16"
                                      FontWeight="Bold"
                                      Foreground="#333333"
                                      Margin="0,0,0,25"/>

                            <!-- Описание задачи -->
                            <StackPanel x:Name="TaskDescriptionPanel" Margin="0,0,0,20" Visibility="Collapsed">
                                <TextBlock Text="Описание задачи"
                                          FontFamily="Segoe UI"
                                          FontSize="14"
                                          FontWeight="SemiBold"
                                          Foreground="#333333"
                                          Margin="0,0,0,10"/>
                                <TextBox x:Name="DescriptionTextBox"
                                         Style="{StaticResource ReadOnlyTextBoxStyle}"
                                         Height="80"
                                         TextWrapping="Wrap"
                                         VerticalScrollBarVisibility="Auto"/>
                            </StackPanel>

                            <!-- Отчет по задаче -->
                            <StackPanel x:Name="TaskReportPanel" Margin="0,0,0,25" Visibility="Collapsed">
                                <TextBlock Text="Отчет по задаче"
                                          FontFamily="Segoe UI"
                                          FontSize="14"
                                          FontWeight="SemiBold"
                                          Foreground="#333333"
                                          Margin="0,0,0,10"/>
                                <TextBox x:Name="ReportTextBox"
                                         Style="{StaticResource ReadOnlyTextBoxStyle}"
                                         Height="80"
                                         TextWrapping="Wrap"
                                         VerticalScrollBarVisibility="Auto"/>
                            </StackPanel>
                            <!-- Сюда вставляем новые поля -->
                            <TextBlock Text="Исполнитель:" FontWeight="SemiBold" Margin="0,10,0,2"/>
                            <TextBlock x:Name="AssignedEmployeeText" FontSize="12" Foreground="#333333"/>

                            <TextBlock Text="Срок сдачи:" FontWeight="SemiBold" Margin="0,10,0,2"/>
                            <TextBlock x:Name="DeadlineDateText" FontSize="12" Foreground="#333333"/>

                            <!-- Кнопки действий для исполнителя -->
                            <!-- Кнопки действий для исполнителя -->
                            <StackPanel x:Name="TaskActionsPanel" Visibility="Collapsed">
                                <!-- Первая строка - кнопки исполнителя -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <Button x:Name="UploadReportButton"
                Content="Загрузить отчет"
                Style="{StaticResource UploadButtonStyle}"
                Click="UploadReportButton_Click"
                Width="140"
                Height="36"
                Margin="0,0,10,0"
                Visibility="Collapsed"/>

                                    <Button x:Name="CompleteTaskButton"
                Content="Сдать задачу"
                Style="{StaticResource CompleteButtonStyle}"
                Click="CompleteTaskButton_Click"
                Width="120"
                Height="36"
                Visibility="Collapsed"/>
                                </StackPanel>

                                <!-- Вторая строка - кнопки администратора -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <Button x:Name="ApproveTaskButton"
                Content="Принять"
                Style="{StaticResource ActionButtonStyle}"
                Click="ApproveTaskButton_Click"
                Width="80"
                Height="36"
                Margin="0,0,10,0"
                Visibility="Collapsed"/>

                                    <Button x:Name="RejectTaskButton"
                Content="Отклонить"
                Style="{StaticResource DangerButtonStyle}"
                Click="RejectTaskButton_Click"
                Width="80"
                Height="36"
                Visibility="Collapsed"/>
                                </StackPanel>

                                <!-- Третья строка - кнопка "Принять задачу" для исполнителя -->
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="AcceptRejectedTaskButton"
                Content="Принять задачу"
                Style="{StaticResource ActionButtonStyle}"
                Click="AcceptRejectedTaskButton_Click"
                Width="140"
                Height="36"
                Visibility="Collapsed"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Кнопка скачивания отчета — всегда видна, если файл есть -->
                            <Button x:Name="DownloadReportButton"
                        Content="Скачать отчет"
                        Style="{StaticResource DownloadButtonStyle}"
                        Click="DownloadReportButton_Click"
                        Width="120"
                        Height="36"
                        Margin="0,10,0,0"
                        Visibility="Collapsed"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>